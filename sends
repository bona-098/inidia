{
    caption: 'BU',
    dataField: 'bu',
    allowEditing: false, // BU tidak bisa diubah
},
{
    caption: 'Lokasi',
    dataField: 'sector',
    allowEditing: false, // Sector tidak bisa diubah
},
{
    caption: 'Room',
    dataField: 'ghm_room_id',
    width: 250,
    lookup: {
        dataSource: async function (options) {
            let allRooms = await listOption('/list-room'); // Ambil data dari server
            return allRooms.filter(room => 
                room.bu === options.data.bu && room.sector === options.data.sector
            );
        },
        valueExpr: 'id',
        displayExpr: 'roomName'
    },
    validationRules: [{ type: "required" }]
}
