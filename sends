columns: [
    {
        caption: 'BU',
        dataField: 'bu',
        width: 150,
        allowEditing: false, // BU tidak bisa diubah
    },
    {
        caption: 'Lokasi',
        dataField: 'sector',
        width: 200,
        allowEditing: false, // Sector tidak bisa diubah
    },
    {
        caption: 'Room',
        dataField: 'ghm_room_id',
        width: 250,
        lookup: {
            dataSource: function (options) {
                if (options.data && options.data.bu && options.data.sector) {
                    return listOption('/list-room?bu=' + options.data.bu + '&sector=' + options.data.sector, 'id', 'roomName');
                }
                return [];
            },
            valueExpr: 'id',
            displayExpr: function (item) {
                return item ? item.roomName : "";
            }
        },
        validationRules: [{ type: "required" }]
    }
]
