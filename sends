{
    caption: 'Room',
    dataField: 'ghm_room_id',
    width: 200,
    lookup: {
        dataSource: function(options) {
            // Ambil data form yang sedang diedit
            const formData = options.component.option("formData");  
            const currentSector = formData ? formData.sector : null;  

            // Pastikan sector ada sebelum melakukan filter
            if (!currentSector) {
                return [];
            }

            return listOption('/list-room', 'id', 'roomName')
                .filter(room => room.sector === currentSector); 
        },
        valueExpr: 'id',
        displayExpr: 'roomName',
    },
    validationRules: [{ type: "required" }],
}
