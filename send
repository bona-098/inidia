function loadData() {
    fetch('/ghm/dashboard', { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
        .then(response => response.json())
        .then(data => {
            console.log('Data Booking Refreshed:', data.booking); // Cek data

            let scheduler = $("#scheduler").dxScheduler("instance");

            // Hanya update jika data ada
            if (data.booking && Array.isArray(data.booking)) {
                scheduler.option("dataSource", data.booking);
            } else {
                console.warn("Data booking kosong atau salah format");
            }
        })
        .catch(error => console.error('Error fetching data:', error));
}
