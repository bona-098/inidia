function loadData() {
    let dataSource = schedulerInstance.getDataSource();

    console.log("üîÑ Fetching data from API...");

    // **1Ô∏è‚É£ Reset Data Source**
    schedulerInstance.option("dataSource", null);
    schedulerInstance.repaint();

    // **2Ô∏è‚É£ Ambil Data Baru dari API**
    fetch(`/devportal/api/ghm_booking`)
        .then(response => response.json())
        .then(response => {
            let data = response.data;

            console.log("üîç Data Loaded from API:", data);

            if (!Array.isArray(data) || data.length === 0) {
                console.warn("‚ö†Ô∏è Warning: Data kosong atau bukan array! Cek API backend.");
                return;
            }

            // **3Ô∏è‚É£ Paksa Clear Data Source untuk Hapus Cache Lama**
            dataSource.store().clear(); 
            dataSource.load(); // Reload data kosong dulu

            setTimeout(() => {
                schedulerInstance.option("dataSource", data);
                schedulerInstance.repaint();
                console.log("‚úÖ Scheduler Updated with New Data!");
            }, 500);
        })
        .catch(error => {
            console.error("‚ùå API Fetch Error:", error);
        });
}
