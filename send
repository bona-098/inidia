function loadData() {
    let dataSource = schedulerInstance.getDataSource();

    console.log("üîÑ Memuat ulang data...");

    dataSource.reload().done(function() {
        console.log("‚úÖ Data successfully reloaded");

        dataSource.load().done(function(data) {
            console.log("üîç Data Loaded:", data);

            if (!Array.isArray(data) || data.length === 0) {
                console.warn("‚ö†Ô∏è Warning: Data kosong atau bukan array! Cek API backend.");
                return;
            }

            schedulerInstance.option("dataSource", null); // Reset data source dulu
            schedulerInstance.repaint();
            setTimeout(() => {
                schedulerInstance.option("dataSource", data);
                schedulerInstance.repaint();
                console.log("‚úÖ Scheduler Updated!");
            }, 500);
        }).fail(function(error) {
            console.error("‚ùå Failed to load new data:", error);
        });

    }).fail(function(error) {
        console.error("‚ùå Failed to reload data:", error);
    });
}
