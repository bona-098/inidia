schedulerInstance.getDataSource().reload().done(function() {
    console.log("Data successfully reloaded");

    schedulerInstance.getDataSource().load().done(function(data) {
        console.log("New Data:", data); // Debug: cek apakah data baru sudah diambil dari DB
        schedulerInstance.repaint();
    }).fail(function(error) {
        console.error("Failed to load new data:", error);
    });

}).fail(function(error) {
    console.error("Failed to reload data:", error);
});
