document.getElementById("refreshData").addEventListener("click", function () {
    fetch('/ghm/dashboard', { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
        .then(response => response.json())
        .then(data => {
            console.log('Data Booking Refreshed:', data.booking);

            // Ambil instance Scheduler
            let scheduler = $("#scheduler").dxScheduler("instance");

            // Update dataSource tanpa menginisialisasi ulang Scheduler
            scheduler.option("dataSource", new DevExpress.data.DataSource({
                store: data.booking,
                key: "id",
            }));
        })
        .catch(error => console.error('Error fetching data:', error));
});
