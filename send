function loadData() {
    let dataSource = schedulerInstance.getDataSource();

    // Hapus cache data lama
    dataSource.store().clear();
    dataSource.store().push([]);

    // Reload data dari backend
    dataSource.reload().done(function() {
        console.log("‚úÖ Data successfully reloaded");

        dataSource.load().done(function(data) {
            console.log("üîç Data Loaded:", data); // Debugging: Periksa data yang diterima

            if (!Array.isArray(data) || data.length === 0) {
                console.warn("‚ö†Ô∏è Warning: Data kosong atau bukan array! Cek API backend.");
                return;
            }

            schedulerInstance.option("dataSource", []); // Kosongkan dulu
            schedulerInstance.option("dataSource", data); // Masukkan data baru
            schedulerInstance.repaint(); // Render ulang Scheduler

            console.log("‚úÖ Scheduler Updated!");
        }).fail(function(error) {
            console.error("‚ùå Failed to load new data:", error);
        });

    }).fail(function(error) {
        console.error("‚ùå Failed to reload data:", error);
    });
}
