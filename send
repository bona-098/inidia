fetch(`/dashboard`)
    .then(response => {
        if (!response.ok) {
            throw new Error(`HTTP Error! Status: ${response.status}`);
        }
        return response.json(); // Parsing JSON
    })
    .then(response => {
        console.log("✅ Data Loaded from Dashboard:", response.data);
        schedulerInstance.clear();
        schedulerInstance.parse(response.data, "json");
    })
    .catch(error => {
        console.error("❌ API Fetch Error:", error);
        alert("Gagal memuat data! Cek apakah Anda sudah login.");
    });
